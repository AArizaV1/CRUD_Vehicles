@model IEnumerable<Week7CodeAssessment.Models.Vehicle>

@{
    ViewData["Title"] = "Index";
}

<h1>ALL VEHICLES</h1>
<br />
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<form asp-controller="Vehicles" asp-action="Index" method="get">
    <p>
        Search by Owner ID: <input type="text" name="searchOwnerId" class="form-text" />
        <input type="submit" value="Search" class="btn btn-sm btn-dark" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                BRAND
            </th>
            <th>
                VIN
            </th>
            <th>
                COLOR
            </th>
            <th>
                YEAR
            </th>
            <th>
                OWNER ID
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerId)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


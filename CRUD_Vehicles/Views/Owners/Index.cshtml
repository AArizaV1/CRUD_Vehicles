@model IEnumerable<Week7CodeAssessment.Models.Owner>

@{
    ViewData["Title"] = "Index";
}

<h1>ALL OWNERS</h1>
<br/>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>


<form asp-controller="Owners" asp-action="Index" method="get">
    <p>
        Search by Owner ID: <input type="text" name="OwnerId" class="form-text" />
        <input type="submit" value="Search" class="btn btn-sm btn-dark" />
    </p>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                FIRST NAME
            </th>
            <th>
                LAST NAME
            </th>
            <th>
                DRIVER LICENSE
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriverLicense)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


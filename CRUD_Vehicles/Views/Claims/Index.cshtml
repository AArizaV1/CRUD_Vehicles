@model IEnumerable<Week7CodeAssessment.Models.Claim>

@{
    ViewData["Title"] = "Index";
}

<h1>ALL CLAIMS</h1>
<br />
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>


<form asp-controller="Claims" asp-action="Index" method="get">
    <p>
        Search by Vehicle ID: <input type="text" name="searchVehiclesId" class="form-text" />
        <input type="submit" value="Search" class="btn btn-sm btn-dark" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                DESCRIPTION
            </th>
            <th>
                STATUS
            </th>
            <th>
                CLAIM DATE
            </th>
            <th>
                VEHICLE ID
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleId)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

